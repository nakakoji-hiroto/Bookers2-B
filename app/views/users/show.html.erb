<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'books/index',books: @books %>
      <h3>投稿数の前日比・前週比</h3>
      <table class='table table-hover table-bordered'>
        <thead>
          <tr>
            <th>今日の投稿</th>
            <th>昨日の投稿</th>
            <th>前日比</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @today_book.count %></td>
            <td><%= @yesterday_book.count %></td>
          <% if @the_day_before == 0 %>
            <td> － </td>
          <% else %>
            <td><%= @the_day_before %>%</td>
          <% end %>
          </tr>
        </tbody>
      </table>
      
      <table class='table table-hover table-bordered'>
        <thead>
          <tr>
            <th>今週の投稿</th>
            <th>先週の投稿</th>
            <th>先週比</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @this_week_book.count %></td>
            <td><%= @last_week_book.count %></td>
          <% if @the_week_before == 0 %>
            <td> － </td>
          <% else %>
            <td><%= @the_week_before %>%</td>
          <% end %>
          </tr>
        </tbody>
      </table>
      
      <h3>7日分の投稿数</h3>
      <table class='table table-hover table-bordered'>
        <thead>
          <tr>
            <th>6日前</th>
            <th>5日前</th>
            <th>4日前</th>
            <th>3日前</th>
            <th>2日前</th>
            <th>1日前</th>
            <th>今日</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th><%= @six_days_ago_book.count %></th>
            <th><%= @five_days_ago_book.count %></th>
            <th><%= @four_days_ago_book.count %></th>
            <th><%= @three_days_ago_book.count %></th>
            <th><%= @two_days_ago_book.count %></th>
            <th><%= @yesterday_book.count %></th>
            <th><%= @today_book.count %></th>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
